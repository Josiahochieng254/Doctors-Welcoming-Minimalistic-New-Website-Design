    <script>
        // JavaScript for the telemedicine website
        document.addEventListener('DOMContentLoaded', function() {
            // Smooth scrolling for navigation links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();

                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);

                    if (targetElement) {
                        // For subpage content, you might want to show it
                        if (targetId === '#services-details-subpage') {
                            document.getElementById('services-details-subpage').style.display = 'block';
                            targetElement.scrollIntoView({ behavior: 'smooth' });
                        } else {
                            // Hide subpage content if navigating to a main section
                            document.getElementById('services-details-subpage').style.display = 'none';
                            targetElement.scrollIntoView({ behavior: 'smooth' });
                        }
                    }
                });
            });

            // Basic form submission handling (client-side only for this example)
            const contactForm = document.querySelector('#contact-form-section .feature-card');
            if (contactForm) {
                contactForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    alert('Thank you for contacting Dr. V Health! We will get back to you shortly.');
                    contactForm.reset(); // Clear the form
                    // In a real application, you would send this data to a backend server using fetch() or XMLHttpRequest
                });
            }

            // You can add more interactive JS here, e.g.,
            // - Testimonial carousels (if you add a testimonials section)
            // - Animations on scroll (using Intersection Observer API)
            // - Dynamic content loading for subpages (e.g., AJAX)
            // - Mobile menu toggle (if you implement a hamburger menu for smaller screens)
        });
    </script>
